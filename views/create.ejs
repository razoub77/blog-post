<%- include('partials/header.ejs') %>

<div id="create" class="container">
  <h1>Create a blog</h1>
  <form action="/create" method="post" class="form-wrapper">
    <label for="title">Title</label>
    <input type="text" name="title" id="title" placeholder="Insert the title here">
    <label for="content">Content</label>
    <textarea name="content" id="content" rows="4" cols="50" placeholder="Insert your message here"></textarea>
    <input type="submit" value="Submit">
  </form>
</div>

